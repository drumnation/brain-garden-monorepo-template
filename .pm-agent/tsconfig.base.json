{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@kit/*": ["tooling/*/src"],
      "@pm-agent/core-db": ["packages/core-db/src"],
      "@pm-agent/core-db/*": ["packages/core-db/src/*"],
      "@pm-agent/core-scanner": ["packages/core-scanner/src"],
      "@pm-agent/core-scanner/*": ["packages/core-scanner/src/*"],
      "@pm-agent/cli": ["apps/pm-cli/src"],
      "@pm-agent/cli/*": ["apps/pm-cli/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".turbo"]
}
